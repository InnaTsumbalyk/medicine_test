<div class="container">

  <div class="row">
    <div class="box">
      <div class="col-lg-12">
        <hr>
        <h2 class="intro-text text-center"><strong><%= @company.name %></strong>
        </h2>
        <hr>
      </div>
      <div class="col-md-6">
        <%= image_tag @company.image, class: 'img-responsive img-border-left' if @company.image? %>
      </div>
      <div class="col-md-6">
        <p><%= @company.email %></p>
        <p><%= @company.address %></p>
        <p> <%= @company.phone %></p>
      </div>

      <div class="col-lg-12">
        <%= @company.description %>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
</div>
