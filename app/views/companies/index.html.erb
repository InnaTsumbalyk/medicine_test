<div id="blue">
  <div class="container">
    <div class="row centered">
      <div class="col-lg-8 col-lg-offset-2">
        Список клінік
      </div>
    </div><!-- row -->
  </div><!-- container -->
</div><!--  bluewrap -->
<% @companies.each do |company| %>


    <div class="container">

      <div class="row">
        <div class="box">
          <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center"><strong><%= link_to company.name, company_path(company) %></strong>
            </h2>
            <hr>
          </div>
          <div class="col-md-6">
            <%= link_to company_path(company) do %>
                <%= image_tag company.image, class: 'img-responsive img-border-left' if company.image? %>
            <% end %>
          </div>
          <div class="col-md-6">
            <p><%= company.email %></p>
            <p><%= company.address %></p>
            <p> <%= company.phone %></p>
            <% if company.activity.present? %>
                <% company.activity.split(%r{,+\s+|,+|\s+}).each do |activity| %>
                    <div class="btn btn-success btn-xs"><%= link_to activity, companies_index_path(activity: activity) %></div>
                <% end %>
            <% end %>
          </div>

          <div class="col-md-12">
            <%= company.description %>
          </div>
          <div class="clearfix"></div>
        </div>
      </div>
    </div>


<% end %>
