<h1>Companies#index</h1>
<p>Find me in app/views/companies/index.html.erb</p>
<% @companies.each do |company| %>
    <tr>

      <td> id <%= company.id %></td>
      <br>
      <td><%= company.name %></td>
      <br>
      <td><%= company.email %></td>
      <br>
      <td><%= company.address %></td>
      <br>
      <td><%= company.phone %></td>
      <br>
      <td><%= company.description %></td>
      <br>
      <%= image_tag company.image, style: 'width: 500px; height: 500px' if company.image? %>


      <td><%= link_to 'Show', company_path(company) %></td>
      <br>
    </tr>
<% end %>