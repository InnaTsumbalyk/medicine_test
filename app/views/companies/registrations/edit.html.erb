<div class="container">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
      <%= devise_error_messages! %>
      <div class="row">
        <div class="box">
          <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center">
              <div class="field">
                <%= f.text_field :name, class: 'form-control btn btn-info ' %>
              </div>
            </h2>
            <hr>
          </div>
          <div class="col-md-6">
            <%= image_tag current_company.image, class: 'img-responsive img-border-left' if current_company.image? %>
          </div>
          <div class="col-md-6">
            <p>
            <div class="field">
              <%= f.label :email %><br/>
              <%= f.email_field :email, class: 'form-control' %>
            </div>
            </p>
            <p>
            <div class="field">
              <%= f.label :address %><br/>
              <%= f.text_field :address, class: 'form-control' %>
            </div>
            </p>
            <p>
            <div class="field">
              <%= f.label :phone %><br/>
              <%= f.text_field :phone, class: 'form-control' %>
            </div>
            </p>
            <p>
            <div>
              <%= f.label :image %>
              <%= f.file_field :image %>

            </div>
            </p>
          </div>
          <div class="col-lg-12">
            <div class="field">
              <%= f.label :description %><br/>
              <%= f.text_area :description, :cols => 10, :rows => 10, :class => 'form-control' %>
            </div>
          </div>
          <div class="clearfix"></div>
          <iframe width=100% height="400" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"
                  src="https://maps.google.com/maps?q=<%= @company.lat %>,<%= @company.lng %>&hl=es;z=14&amp;output=embed"></iframe>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
          <div class="col-md-6">
            <div class="field">
              <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br/>
              <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="field">
              <%= f.label :password_confirmation %><br/>
              <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
            </div>
          </div>
          <br>
          <div class="row col-md-12">
            <div class="col-md-4"></div>
            <div class="col-md-4">
              <div class="field">
                <%= f.label :current_password %> <i>(Need to confirm changes)</i><br/>
                <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
              </div>
            </div>
            <div class="col-md-4"></div>
          </div>
          <br>
          <br>
          <br>
          <br>
          <br>
          <br>
          <div class="row col-md-12">
            <div class="col-md-4"></div>
            <div class="col-md-4">
              <div class="actions text-centers ">
                <%= f.submit "Update", class: 'btn btn-warning btn-block' %>
              </div>
            </div>
            <div class="col-md-4"></div>
          </div>

  <% end %>


  </div>
  </div>

  <div class="row">
    <div class="box">
      <div class="col-lg-12">
        <hr>
        <h2 class="intro-text text-center">Our <strong>Team</strong>
        </h2>
        <hr>
      </div>
      <div class="col-lg-12 add-new-doctor">
        <%= form_for Doctor.new do |f| %>
            <form>
              <div class="top-margin col-md-3">
                <label>Імя <span class="text-danger">*</span></label>
                <%= f.text_field :name, class: 'form-control', autofocus: true, required: true, placeholder: "Іван" %>
              </div>
              <div class="top-margin col-md-3">
                <label>Фамилия <span class="text-danger">*</span></label>
                <%= f.text_field :second_name, class: 'form-control', required: true, placeholder: "Іванов" %>
              </div>
              <div class="top-margin col-md-3">
                <label>отчес <span class="text-danger">*</span></label>
                <%= f.text_field :surname, class: 'form-control', required: true, placeholder: "Іванович" %>
              </div>
              <div class="top-margin col-md-3">
                <label>категория<span class="text-danger">*</span></label>
                <%= f.text_field :category, class: 'form-control', required: true, placeholder: "вищої" %>
              </div>
              <br>
              <div class="top-margin col-md-3">
                <label>специализация<span class="text-danger">*</span></label>
                <%= f.text_field :specialization, class: 'form-control', required: true, placeholder: "хірург" %>
              </div>
              <div class="top-margin col-md-3">
                <label>фото<span class="text-danger">*</span></label>
                <%= f.text_field :photo, class: 'form-control', required: true, placeholder: "фото" %>
              </div>
              <div class="top-margin col-md-3">
                <label>email<span class="text-danger">*</span></label>
                <%= f.email_field :email, class: 'form-control', required: true, placeholder: "Email" %>
              </div>
              <div class="top-margin col-md-3">
                <label>pass<span class="text-danger">*</span></label>
                <%= f.text_field :password, class: 'form-control', required: true, placeholder: "password" %>
              </div>


              <div class="thin text-center">
                <%= f.submit "Додати", class: 'btn btn-success' %>
              </div>

            </form>
        <% end %>
      </div>

      <% current_company.doctors.each do |doctor| %>
          <div class="col-sm-12  doctor-list-item">
            <div class="container-fluid well span6">
              <div class="row-fluid">
                <div class="col-md-3">
                  <%= image_tag(doctor.photo.url(:medium), class: 'img-circle') %>
                </div>

                <div class="col-md-3">
                  <h3><%= doctor.second_name %></h3>
                  <h6><%= doctor.name %></h6>
                  <h6><%= doctor.surname %></h6>
                </div>
                <div class="col-md-6">
                  <h6>Лікар <%= doctor.category %> категорії </h6>
                  <h6>Спеціалізація  <%= doctor.specialization %> </h6>
                  <h6>Email: <%= doctor.email %></h6>

                </div>
                <%= link_to 'Редагувати', edit_doctor_path(doctor), class: 'btn btn-info' %>
              </div>
            </div>

          </div>
      <% end %>
      <div class="clearfix"></div>
    </div>
  </div>

</div>
<!-- /.container -->
