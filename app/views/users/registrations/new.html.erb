<div class="container">
  <div class="row">

    <article class="col-xs-12 maincontent">
      <header class="page-header ">
        <h1 class="page-title centered">Регистрация</h1>
      </header>

      <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-default">
          <div class="panel-body">
            <h3 class="thin text-center">Регистрация нового пользователя</h3>
            <p class="text-center text-muted">Тут якась інфа<br> <%= render "users/shared/links" %> </p>
            <hr>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>
                <form>
                  <div class="top-margin">
                    <label>Фамилия <span class="text-danger">*</span></label>
                    <%= f.text_field :surname, class: 'form-control' , autofocus: true %>
                  </div>
                  <div class="top-margin">
                    <label>Имя <span class="text-danger">*</span></label>
                    <%= f.text_field :name, class: 'form-control' %>
                  </div>
                  <div class="top-margin">
                    <label>Отчество <span class="text-danger">*</span></label>
                    <%= f.text_field :patronymic, class: 'form-control' %>
                  </div>
                  <div class="top-margin">
                    <label>Телефон <span class="text-danger">*</span></label>
                    <%= f.text_field :phone, class: 'form-control', placeholder: '(xxx)xxx-xx-xx' %>
                  </div>
                  <div class="top-margin">
                    <label>Адрес<span class="text-danger">*</span></label>
                    <%= f.text_field :address, class: 'form-control'  %>
                  </div>
                  <div class="top-margin">
                    <label>Email <span class="text-danger">*</span></label>
                    <%= f.email_field :email , class: 'form-control' %>
                  </div>

                  <div class="row top-margin">
                    <div class="col-sm-6">
                      <label>Password <span class="text-danger">*</span></label><% if @minimum_password_length %>
                          <em>(<%= @minimum_password_length %> characters min)</em>
                      <% end %>
                      <%= f.password_field :password, autocomplete: "off" , class: 'form-control' %>
                    </div>
                    <div class="col-sm-6">
                      <label>Confirm Password <span class="text-danger">*</span></label>
                      <%= f.password_field :password_confirmation, autocomplete: "off" , class: 'form-control' %>
                    </div>
                  </div>

                  <hr>

                  <div class="row">

                    <div class="thin text-center">
                      <%= f.submit "Sign up" , class: 'btn btn-default' %>
                    </div>
                  </div>
                </form>
            <% end %>
          </div>
        </div>

      </div>

    </article>
  </div>
</div>
